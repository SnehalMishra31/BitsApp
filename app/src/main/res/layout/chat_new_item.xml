<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/othermessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:id="@+id/filelayout1"
            >
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/fileslogo"
                android:id="@+id/download1"
                >
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/remark_orange"
                android:text="filename.pdf"
                android:id="@+id/filename1"
                android:textColor="#ffffff"
                android:padding="5dp">
            </TextView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            android:padding="3dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SenderName"
                    android:maxLength="15"
                    android:id="@+id/sendername1"
                    android:textStyle="bold"
                   android:padding="5dp" >
                </TextView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="2dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="3dp"
                        >


                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:background="#000"
                            android:visibility="gone"
                            android:id="@+id/image1"
                            android:layout_gravity="center_horizontal"
                            >
                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="this is dummy message "
                            android:textColor="#000"
                            android:gravity="start"
                            android:textSize="18sp"
                            android:id="@+id/message1"
                            android:layout_gravity="start"
                            android:padding="5dp">
                        </TextView>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="end"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8:45 pm"
                                android:maxLength="5"
                                android:id="@+id/time1"
                                android:textSize="12sp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginRight="5dp"
                                android:padding="2dp">
                            </TextView>


                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21/12/2020"
            android:id="@+id/date1"
            android:layout_gravity="start"
            android:textSize="12sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yourmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="end">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/filelayout2"
            android:layout_gravity="center_horizontal"
            >
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/fileslogo"
                android:id="@+id/download2"
                >
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/remark_orange"
                android:text="filename.pdf"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:id="@+id/filename2">
            </TextView>
        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_gravity="end"
        android:backgroundTint="#C1E4F4"
        android:padding="3dp"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginTop="5dp"
           android:background="@android:color/transparent"
           android:layout_marginBottom="5dp"
           >

          <androidx.cardview.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:cardCornerRadius="2dp"
              android:background="@android:color/transparent"

              >

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="#C1E4F4"
                  android:orientation="vertical"
                  android:padding="3dp">


                  <ImageView
                      android:id="@+id/image2"
                      android:layout_width="250dp"
                      android:layout_height="250dp"
                      android:layout_gravity="center_horizontal"
                      android:background="#000"
                      android:visibility="gone"></ImageView>

                  <TextView
                      android:id="@+id/message2"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="start"
                      android:background="@android:color/transparent"
                      android:gravity="start"
                      android:padding="5dp"
                      android:text="this is dummy message "
                      android:textColor="#000"
                      android:textSize="18sp"></TextView>


                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="end"
                      android:orientation="horizontal">

                      <TextView
                          android:id="@+id/time2"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="5dp"
                          android:layout_marginRight="5dp"
                          android:background="@android:color/transparent"
                          android:maxLength="5"
                          android:padding="2dp"
                          android:text="8:45 pm"
                          android:textSize="12sp"></TextView>

                      <FrameLayout
                          android:layout_width="25dp"
                          android:layout_height="20dp">

                          <ImageView
                              android:id="@+id/seen1"
                              android:layout_width="15dp"
                              android:layout_height="20dp"
                              android:layout_gravity="center_vertical|start"
                              android:background="@android:color/transparent"
                              android:src="@drawable/ic_unseen"></ImageView>

                          <ImageView
                              android:id="@+id/seen2"
                              android:layout_width="15dp"
                              android:layout_height="20dp"
                              android:layout_gravity="center_vertical|start"
                              android:layout_marginStart="5dp"
                              android:layout_marginLeft="5dp"
                              android:background="@android:color/transparent"
                              android:src="@drawable/ic_unseen"></ImageView>
                      </FrameLayout>
                  </LinearLayout>

              </LinearLayout>


          </androidx.cardview.widget.CardView>


       </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21/12/2020"
        android:background="@android:color/transparent"
        android:layout_gravity="end"
        android:id="@+id/date2"
        android:textSize="12sp">
    </TextView>
    </LinearLayout>

</LinearLayout>